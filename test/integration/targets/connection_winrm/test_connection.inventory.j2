[windows]
{% for host in vars.groups.windows %}
{{ host }}  assible_host={{ hostvars[host]['assible_host'] }} assible_port={{ hostvars[host]['assible_port'] }} assible_user={{ hostvars[host]['assible_user'] }} assible_password={{ hostvars[host]['assible_password'] }}
{% endfor %}

[windows:vars]
assible_connection=winrm
# we don't know if we're using an encrypted connection or not, so we'll use message encryption
assible_winrm_transport=ntlm
assible_winrm_server_cert_validation=ignore
